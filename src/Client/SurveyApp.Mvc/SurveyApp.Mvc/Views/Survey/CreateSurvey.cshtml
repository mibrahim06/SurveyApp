@model SurveyApp.DataTransferObjects.Incoming.CreateNewSurveyRequest

<h3> Yeni bir anket oluştur</h3>

<div class="row md-4">
    <div class="col-md-4">
        <form asp-action="CreateSurvey">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Anket Adı</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group text-white-50" style="margin-top: 10px;">
               <input type="submit" value="Ekle" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>