@model CreateSurveyModel

<h3> Yeni bir anket oluştur</h3>

<div class="row md-4">
    <div class="col-md-4">
        <a asp-action="AddQuestion" class="btn btn-primary">Soru Ekle</a>
        <form asp-action="CreateSurvey">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CreateNewSurveyRequest.Name" class="control-label">Anket Adı</label>
                <input asp-for="@Model.CreateNewSurveyRequest.Name" class="form-control"/>
                <span asp-validation-for="@Model.CreateNewSurveyRequest.Name" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Kayıt Et" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


