@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model UserLoginModel

@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["error"] as string;
}

<h1>Giriş Yap</h1>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger" role="alert" style="padding: 20px;">
        <h2>@error</h2>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-route-returnUrl="@returnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Kullanıcı adı</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Şifre</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Giriş yap" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 20px">
    <ul>
        <li>
            <a href="/login/google?returnUrl=@returnUrl">Google ile giriş yap</a>
        </li>
    </ul>
</div>